    price: "$149.99"
  },
  {
    id: 2,
    name: "Smart Watch Pro",
    image: "https://placehold.co/300x300/e4e4e7/ffffff?text=Smart+Watch",
    price: "$199.99"
  },
  {
    id: 3,
    name: "Wireless Earbuds",
    image: "https://placehold.co/300x300/e4e4e7/ffffff?text=Earbuds",
    price: "$89.99"
  },
  {
    id: 4,
    name: "Designer Sunglasses",
    image: "https://placehold.co/300x300/e4e4e7/ffffff?text=Sunglasses",
    price: "$129.99"
  },
  {
    id: 5,
    name: "Portable Speaker",
    image: "https://placehold.co/300x300/e4e4e7/ffffff?text=Speaker",
    price: "$79.99"
  },
  {
    id: 6,
    name: "Fitness Tracker",
    image: "https://placehold.co/300x300/e4e4e7/ffffff?text=Tracker",
    price: "$59.99"
  },
  {
    id: 7,
    name: "Coffee Maker",
    image: "https://placehold.co/300x300/e4e4e7/ffffff?text=Coffee+Maker",
    price: "$199.99"
